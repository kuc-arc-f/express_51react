{
  "type": "module",
  "scripts": {
    "dev": "npx nodemon",
    "dev:test": "NODE_ENV=develop nodemon",
    "build": "bun run build:server && bun run build:client",
    "build:prod": "NODE_ENV=production npm run build",
    "build:test": "npm run clean && node build.js && node buildClient.js && npm run build:css",
    "clean": "rimraf dist && rimraf public/static",
    "build:server": "bun build --target=node --minify src/index.ts --outfile dist/index.js",
    "build:client": "bunx vite build --mode client",
    "build:css": "npx tailwindcss -i ./src/main.css -o ./public/static/main.css",
    "start": "NODE_ENV=production && node dist/index.js",
    "test": "ts-node src/index.ts"
  },
  "dependencies": {
    "@radix-ui/react-icons": "^1.3.0",
    "@radix-ui/react-label": "^2.1.0",
    "@radix-ui/react-select": "^2.1.1",
    "@radix-ui/react-slot": "^1.1.0",
    "@radix-ui/react-switch": "^1.1.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "cookie-parser": "^1.4.6",
    "express": "^4.19.2",
    "lucide-react": "^0.439.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.26.1",
    "tailwind-merge": "^2.5.2",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^22.5.2",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.20",
    "nodemon": "^3.0.3",
    "postcss": "^8.4.45",
    "rimraf": "^6.0.1",
    "tailwindcss": "^3.4.10",
    "typescript": "^5.5.3",
    "vite": "^5.4.2"
  }
}
